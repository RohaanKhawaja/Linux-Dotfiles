{
	// Positioning rules
	"layer": "top",
	"position": "top",
	"height": 16,
	"spacing": 4,
	"margin-top": 5,
	"margin-left": 10,
	"margin-right": 10,
    
	// Module layout
	"modules-left": ["hyprland/workspaces"],
	"modules-center": ["hyprland/window"],
	"modules-right": [
	"tray",
	"pulseaudio",
	"network", 
	"backlight",
	"battery",
	"clock",
	"idle_inhibitor",
	],
    
	// Workspace configuration
	"hyprland/workspaces": {
	"disable-scroll": true,
	"all-outputs": true,
	"warp-on-scroll": false,
	"format": "{icon}",
	"format-icons": {
        	"1": "Û∞≤†",
        	"2": "Û∞≤¢", 
        	"3": "Û∞≤§",
        	"4": "Û∞≤¶",
        	"5": "Û∞≤®",
        	"6": "Û∞≤™",
        	"7": "Û∞≤¨",
        	"8": "Û∞≤Æ",
        	"9": "Û∞≤∞",
        	"10": "Û∞ø¨",
        	"active": "Û∞ÆØ",
        	"default": "Û∞ßû"
	},
  "ignore-workspaces": ["999", "1000", "1001"],
	"persistent-workspaces": {
        	"*": 3 // Show 5 workspaces on all monitors
	}
	},
    
	// Window title in centre
	"hyprland/window": {
	"format": "{}",
	"max-length": 60,
	"separate-outputs": true,
	"rewrite": {
        	"(.*) ‚Äî Mozilla Firefox": "üåç $1",
        	"(.*) - Visual Studio Code": "Û∞®û $1",
        	"(.*) - vim": " $1",
        	"(.*) - nvim": " $1"
	}
	},
    
	// Idle inhibitor
	"idle_inhibitor": {
	"format": "{icon}",
	"format-icons": {
        	"activated": "Û∞í≥",
        	"deactivated": "Û∞í≤"
	},
	"tooltip": true,
	"tooltip-format-activated": "Idle inhibitor active",
	"tooltip-format-deactivated": "Idle inhibitor inactive"
	},
    
	// System tray
	"tray": {
	"icon-size": 18,
	"spacing": 8,
	"show-passive-items": true
	},
    
	// Clock with British formatting
	"clock": {
	"timezone": "Europe/London",
	"format": "{:%H:%M Û∞É≠}",
	"format-alt": "{:%a, %d %b %Y Û∞É≠}",
	"tooltip-format": "<tt><small>{calendar}</small></tt>",
	"calendar": {
        	"mode": "month",
        	"mode-mon-col": 3,
        	"weeks-pos": "right",
        	"on-scroll": 1,
        	"format": {
        	"months": "<span color='#ffead3'><b>{}</b></span>",
        	"days": "<span color='#ecc6d9'><b>{}</b></span>",
        	"weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        	"weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        	"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
        	}
	}
	},
    
	// CPU monitoring
	"cpu": {
	"interval": 2,
	"format": "{usage:2}% Û∞òö",
	"tooltip": true,
	"tooltip-format": "CPU Usage: {usage}%\nLoad Average: {load}"
	},
    
	// Memory monitoring  
	"memory": {
	"interval": 5,
	"format": "{percentage:2}% Û∞çõ",
	"tooltip": true,
	"tooltip-format": "Memory: {used:0.1f}G/{total:0.1f}G ({percentage}%)\nSwap: {swapUsed:0.1f}G/{swapTotal:0.1f}G"
	},
    
	// Temperature monitoring
	"temperature": {
	"thermal-zone": 2,
	"hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
	"critical-threshold": 85,
	"format-critical": "{temperatureC}¬∞C Û±ÉÇ",
	"format": "{temperatureC}¬∞C {icon}",
	"format-icons": ["Û±ÉÉ", "Û∞îè", "Û±ÉÇ"],
	"tooltip": true,
	"tooltip-format": "Temperature: {temperatureC}¬∞C"
	},
    
	// Screen brightness
	"backlight": {
	"device": "intel_backlight",
	"format": "{percent:2}% {icon}",
	"format-icons": ["Û∞Éû", "Û∞Éü", "ÔÜÖ"],
	"tooltip": true,
	"tooltip-format": "Brightness: {percent}%",
	"on-scroll-up": "brightnessctl set 5%+",
	"on-scroll-down": "brightnessctl set 5%-"
	},
    
	// Battery status
	"battery": {
	"interval": 30,
	"states": {
        	"good": 80,
        	"warning": 30,
        	"critical": 15
	},
	"format": "{capacity:2}% {icon}",
	"format-charging": "{capacity:2}% Û∞ÇÑ",
	"format-plugged": "{capacity:2}% Û∞ö•",
	"format-alt": "{time} {icon}",
	"format-full": "Full Û∞Åπ",
	"format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
	"tooltip": true,
	"tooltip-format": "{timeTo}\nPower: {power:0.1f}W"
	},
    
	// Network configuration
	"network": {
	"interval": 5,
	"format-wifi": "{essid} {signalStrength:2}% Û∞§®",
	//"format-ethernet": "{ipaddr}/{cidr} Û∞àÄ", ENABLES IP ADDRESS FOR SOME FUCKED REASON 
	"format-ethernet": "Connected Û∞àÄ",
	"format-linked": "{ifname} (No IP) Û∞àÄ", 
	"format-disconnected": "Disconnected Û∞§≠",
	//"format-alt": "{ifname}: {ipaddr}/{cidr}", ENABLES IP ADDRESS FOR SOME FUCKED REASON AGAIN
	"tooltip": true,
	"tooltip-format": "{ifname} via {gwaddr}\nIP: {ipaddr}/{cidr}\nSignal: {signalStrength}%",
	"tooltip-format-wifi": "SSID: {essid}\nSignal: {signalStrength}%\nFrequency: {frequency}MHz\nIP: {ipaddr}/{cidr}",
	"tooltip-format-ethernet": "Interface: {ifname}\nIP: {ipaddr}/{cidr}\nGateway: {gwaddr}",
	"on-click": "nm-connection-editor"
	},
    
	// Audio controls
	"pulseaudio": {
	"format": "{volume:2}% {icon} {format_source}",
	"format-bluetooth": "{volume:2}% {icon} {format_source}",
	"format-bluetooth-muted": "Û∞Ç≤ {icon} {format_source}",
	"format-muted": "Û∞ùü {format_source}",
	"format-source": "{volume:2}% Û∞ç¨",
	"format-source-muted": "Û∞ç≠",
	"format-icons": {
        	"headphone": "Û∞ãã",
        	"hands-free": "Û±°è",
        	"headset": "Û∞ãé", 
        	"phone": "Û∞è≤",
        	"portable": "Û∞¶ß",
        	"car": "Û∞Ñã",
        	"default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
	},
	"tooltip": true,
	"tooltip-format": "Volume: {volume}%\nOutput: {desc}",
	"on-click": "pavucontrol",
	"on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
	"on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
	"on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%"
	}
}
